---
import favicon from '../images/favicon.svg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="the beating heart of innovation" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="AI-powered growth for small businesses. Simple, affordable and scalable." />
		<meta property="og:image" content="https://nuroverse-public.s3.us-east-2.amazonaws.com/og-image.png" />
		<link rel="icon" type="image/svg+xml" href={favicon.src} />
		<link rel="apple-touch-icon" href={favicon.src} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@300;400;500;700;900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		background-size: 224px;
		@apply bg-text-black;
		@apply text-trusty-50;
	}
	.my-container {
		@apply container;
		@apply px-3;
	}
	.my-h-screen {
		@apply h-screen;
		height: -webkit-fill-available;
		height: 100svh;
	}
	.btn-primary, .btn-secondary {
		@apply rounded-md;
		@apply px-4;
		@apply pt-1;
		@apply pb-2;
		@apply shadow-md;
		@apply hover:shadow-sm;
		@apply text-lg;
		@apply font-sans;
		@apply font-semibold;
		@apply hover:font-bold;
	}
	.btn-primary {
		@apply text-trusty-500;
		@apply bg-serenity-shade;
		@apply hover:bg-serenity;
	}
	.btn-secondary {
		@apply text-trusty-100;
		@apply bg-trusty-300;
		@apply hover:bg-teal-600;
	}
	.gold-and-bold {
		@apply font-bold;
		@apply text-serenity;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.bg-color-animated {
		background: linear-gradient(270deg, #02231e, #043b34);
		background-size: 400% 400%;

		-webkit-animation: AnimateBackground 10s ease infinite;
		-moz-animation: AnimateBackground 10s ease infinite;
		-o-animation: AnimateBackground 10s ease infinite;
		animation: AnimateBackground 10s ease infinite;
	}

	@-webkit-keyframes AnimateBackground {
		0%{background-position:0% 50%}
		50%{background-position:100% 50%}
		100%{background-position:0% 50%}
	}
	@-moz-keyframes AnimateBackground {
		0%{background-position:0% 50%}
		50%{background-position:100% 50%}
		100%{background-position:0% 50%}
	}
	@-o-keyframes AnimateBackground {
		0%{background-position:0% 50%}
		50%{background-position:100% 50%}
		100%{background-position:0% 50%}
	}
	@keyframes AnimateBackground {
		0%{background-position:0% 50%}
		50%{background-position:100% 50%}
		100%{background-position:0% 50%}
	}
</style>
